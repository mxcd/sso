generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserGroup {
  id           Int   @default(autoincrement()) @id
  name         String   @unique
  displayName  String
  description  String
  createdBy    String
  createdDate  DateTime @default(now())
  modifiedBy   String
  modifiedDate DateTime @default(now())
  users        User[]
}

model User {
  id           String   @default(uuid()) @id
  email        String   @unique
  passwordHash String
  validated    Boolean
  locked       Boolean
  createdBy    String
  createdDate  DateTime @default(now())
  modifiedBy   String
  modifiedDate DateTime @default(now())
  groups       UserGroup[]
}
